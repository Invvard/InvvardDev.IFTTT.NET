        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <Title>IFTTT.NET Core package</Title>
        <Version>0.1.0</Version>
        <VersionSuffix>alpha</VersionSuffix>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\" />
